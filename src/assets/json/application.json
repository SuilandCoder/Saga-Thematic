            "optionals": [
              {
                "constraints": "",
                "description": "",
                "identifier": "PARAMETERS_GRID_SYSTEM",
                "name": "Grid system",
                "type": "Grid system"
              },
              {
                "constraints": "Minimum: 1.000000\nDefault: 10.000000",
                "description": "",
                "identifier": "SCALE",
                "name": "Scale Factor",
                "type": "Floating point"
              }
            ]
          }
        ],
        "tool_description": "Resampling filter for grids. Resamples in a first step the given grid to desired resampling cell size, expressed as multiple of the original cell size (scale factor). This is an up-scaling through which cell values are aggregated as cell area weighted means. Second step is the down-scaling to original cell size using spline interpolation. Specially for larger search distances this is a comparably fast alternative for simple low and high pass filter operations. ",
        "tool_id": "11",
        "tool_name": "Resampling Filter",
        "oid": "5b90e7bbd15d75093cb58730",
        "stateId": "B3CA2F23-7AAB-42b3-BAE7-07D30F8020C0",
        "descriptionPath": "html/grid_filter_11.html"
